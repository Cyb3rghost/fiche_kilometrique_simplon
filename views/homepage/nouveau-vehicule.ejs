
<!DOCTYPE html>
<html>
   <%- include('../partials/head') -%>
  <body>
    
    <%- include('../partials/header', {username: username}) -%>

    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">Nouveau véhicule</h1>
      </div>
    </div>


    <div class="container p-5">

      <a class="btn btn-dark" href="/gestion-vehicules" role="button">Retour</a>

       <br/>
       <br/>

       <div class="card">

        <div class="card-body">

          <form method="POST" action="/nouveau-vehicule">
          <div class="form-group">
            <label for="exampleInputEmail1">Marque</label>
            <input type="text" class="form-control" name="marque">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Modèle</label>
            <input type="text" class="form-control" name="modele">
          </div>
          <div class="form-group">
            <label>Puissance</label>
            <select class="form-control" name="puissance">
              <% baremes.forEach(function(bareme) { %>
                  <option value="<%= bareme.id %>"><%= bareme.chevauxFiscaux %></option>
              <% }); %>
            </select>  
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Année</label>
            <input type="number" class="form-control" name="annee">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Immatriculation</label>
            <input type="text" class="form-control" name="immatriculation">
          </div>
          <button type="submit" class="btn btn-dark btn-block">Création</button>
          </form>


        </div>

       </div>

    </div>

    <!-- You can also require other files to run in this process -->

  </body>
</html>    